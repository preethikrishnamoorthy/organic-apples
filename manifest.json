{
    "manifest_version": 2,
    "name": "Organic Apples",
    "description": "show url.",
    "version": "0.2",
    "background": {
        "scripts": ["event.js"],
        "persistent": false
    },
    "content_scripts": [
      {
        "matches": ["https://*/*", "http://*/*"],
        "js": ["content-script.js"]
      }
    ],
    "permissions": ["storage", "activeTab", "scripting", "tabs", "cookies", "nativeMessaging"],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "/images/get_started16.png",
        "32": "/images/get_started32.png",
        "48": "/images/get_started48.png",
        "128": "/images/get_started128.png"
      }
    },
    "permissions": [
        "tabs",
        "http://*/*",
        "https://*/*"
    ]
}
